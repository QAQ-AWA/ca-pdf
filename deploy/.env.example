# Example docker compose environment for deploy.sh
# Copy to deploy/.env.<environment> or deploy/.env and amend values per environment.

COMPOSE_PROJECT_NAME=monorepo
BACKEND_IMAGE=ghcr.io/example/monorepo-backend:latest
FRONTEND_IMAGE=ghcr.io/example/monorepo-frontend:latest
POSTGRES_IMAGE=postgres:15-alpine
BACKEND_ENV_FILE=deploy/env/backend.env
FRONTEND_ENV_FILE=deploy/env/frontend.env
BACKEND_PORT=8000
FRONTEND_PORT=3000
FRONTEND_VITE_APP_NAME=Monorepo UI
FRONTEND_VITE_API_BASE_URL=https://api.example.com
DATABASE_URL=postgresql+asyncpg://app_user:app_password@db:5432/app_db
POSTGRES_DB=app_db
POSTGRES_USER=app_user
POSTGRES_PASSWORD=app_password
