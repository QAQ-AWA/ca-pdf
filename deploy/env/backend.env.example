# Backend environment variables consumed by docker-compose
# Copy this file to backend.env and populate the secrets before deploying.

APP_NAME=Monorepo API
API_V1_PREFIX=/api/v1
UVICORN_HOST=0.0.0.0
UVICORN_PORT=8000
DATABASE_URL=postgresql+asyncpg://app_user:app_password@db:5432/app_db
DATABASE_ECHO=false
SECRET_KEY=change-me
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_MINUTES=4320
BACKEND_CORS_ORIGINS=https://app.example.com
AUTH_RATE_LIMIT_REQUESTS=5
AUTH_RATE_LIMIT_WINDOW_SECONDS=60
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-me-too
ADMIN_ROLE=admin
ENCRYPTED_STORAGE_ALGORITHM=fernet
ENCRYPTED_STORAGE_MASTER_KEY=PLEASE_REPLACE_WITH_VALID_FERNET_KEY
PRIVATE_KEY_MAX_BYTES=8192
SEAL_IMAGE_MAX_BYTES=1048576
SEAL_IMAGE_ALLOWED_CONTENT_TYPES=image/png,image/svg+xml
PDF_MAX_BYTES=52428800
PDF_ALLOWED_CONTENT_TYPES=application/pdf
PDF_BATCH_MAX_COUNT=10
TSA_URL=
TSA_USERNAME=
TSA_PASSWORD=
